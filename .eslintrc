{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "no-console": "off",
    "no-plusplus": "off",
    "object-curly-spacing": ["warn", "always"],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "singleQuote": true,
        "trailingComma": "all",
        "semi": false
      }
    ]
  }
}
